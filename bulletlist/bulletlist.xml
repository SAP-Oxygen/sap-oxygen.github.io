<Module specificationVersion='2'>
  <ModulePrefs title="Bullet List">
    <Require feature="dynamic-height"/>
    <Require feature="wave"/>
    <Require feature="osapi"/>
    <Locale lang="all">
      <msg name="addItem">${Actor} added &lt;b&gt;the item '${Object}'&lt;/b&gt; to the bullet list ${Target}</msg>
      <msg name="addItemContent"><![CDATA[
        <div style='border: 1px solid #DDD; padding: 10px'>
          <div style='font-size: 40px; display: inline-block; vertical-align: middle'>
            <span class="sap-icon icon-example"></span>
          </div>
          <div style='display: inline-block; vertical-align: middle'>
            <table>
              <tr>
                <td>The item is:</td>
                <td><span style='font-weight: bold'>${Object}</span></td>
              </tr>
              <tr>
                <td>User Agent:</td>
                <td>${Object.Attachments.1}</td>
              </tr>
            </table>
          </div>
        </div>
      ]]></msg> 
    </Locale>
    <Locale lang="zh-TW">
      <msg name="addItem">${Actor} 把「${Object}」加入到 ${Target} 列表裡</msg>
      <msg name="addItemContent"><![CDATA[
        <div style='border: 1px solid #DDD; padding: 10px'>
          <div style='font-size: 40px; display: inline-block; vertical-align: middle'>
            <span class="sap-icon icon-example"></span>
          </div>
          <div style='display: inline-block; vertical-align: middle'>
            <table>
              <tr>
                <td>項目:</td>
                <td><span style='font-weight: bold'>${Object}</span></td>
              </tr>
              <tr>
                <td>瀏覽器:</td>
                <td>${Object.Attachments.1}</td>
              </tr>
            </table>
          </div>
        </div>
      ]]></msg>  
    </Locale>
  </ModulePrefs>
  <Content type="html" href="bulletlist.html"/>
</Module>
